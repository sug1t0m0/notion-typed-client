# E2E Test Environment Configuration
# Copy this file to .env.e2e and fill in your test API key
# DO NOT commit .env.e2e to the repository

# Required: Notion API key for test workspace
# Get from: https://www.notion.so/my-integrations
NOTION_API_KEY_E2E=ntn_xxx

# Required: Parent page ID where test databases will be created
# This must be a page ID that your integration has access to
# You can find this in the page URL: https://notion.so/Page-Name-{PAGE_ID}
NOTION_PARENT_PAGE_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# Optional: Test configuration
E2E_TEST_TIMEOUT=300000  # 5 minutes in milliseconds
E2E_RATE_LIMIT_DELAY=350  # milliseconds between API calls
E2E_CLEANUP_ON_SUCCESS=true  # cleanup test data after successful run
E2E_VERBOSE_LOGGING=false  # enable detailed logging
